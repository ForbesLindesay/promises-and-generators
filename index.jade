    //- If the query includes 'print-pdf', use the PDF print sheet
    script.
      document.write( '<link rel="stylesheet" href="css/print/' + ( window.location.search.match( /print-pdf/gi ) ? 'pdf' : 'paper' ) + '.css" type="text/css" media="print">' );
    style.
      .reveal h4 {
        margin-top: 0.5em;
        margin-bottom: 0.2em;
      }
      .reveal h2 {
        font-size: 1.8em;
      }
      .reveal pre code {
        font-size: 1.6em;
        line-height: 0.95em;
      }
      .reveal .medium-code pre code {
        font-size: 1.5em;
      }
      .reveal .small-code pre code {
        font-size: 1.4em;
      }
      .reveal pre code, .reveal pre {
        margin: 0;
        max-height: none;
        max-width: none;
        width: auto;
      }
      .reveal .slides>section {
        padding: 0;
      }
  body
    .reveal.linear
      .slides
        include slides/01-title.jade
        include slides/02-sequence.jade
        include slides/05-sync.jade
        include slides/06-async.jade
        include slides/07-promise-json.jade
        include slides/08-how-it-works.jade
        include slides/09-why-promise.jade
        include slides/10-me.jade
    script(src='/js/reveal.js')
    script.
      Reveal.initialize({
        controls: false,
        width: 1200,
        height: 700,
        controls: true,
        progress: true,
        history: true,
        center: true,
        margin: 0,
        dependencies: []
      })