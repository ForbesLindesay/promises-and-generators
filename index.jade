    meta(name='description' content='A presentation about JavaScript promises and generators')
    meta(name='author' content='Forbes Lindesay')
    meta(name='apple-mobile-web-app-capable' conent='yes')
    meta(name='apple-mobile-web-app-status-bar-style' content='black-translucent')
    meta(name='viewport' content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no')
    link(rel='stylesheet' href='/css/reveal.min.css')
    link(rel='stylesheet' href='/css/theme/default.css')
    link(rel='stylesheet' href='/css/zenburn.css')
    link(rel='stylesheet' href='/font-awesome/css/index.css')

    meta(name='stop' href='/css/print/paper.css')
